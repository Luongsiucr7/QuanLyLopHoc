@model DLL.DTO.HocSinhDto
@{
    ViewData["Title"] = "Đăng Ký";
}
<body class="bg-primary">
    <main>
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-lg-7">
                    <div class="card shadow-lg border-0 rounded-lg mt-5">
                        <div class="card-header">
                            <h3 class="text-center font-weight-light my-4">Tạo tài khoản</h3>
                        </div>
                        <div class="card-body">
                            <form asp-action="DangKy" method="post">
                                <div class="row mb-3">
                                    <div class="col-12 col-md-6 mb-3 mb-md-0">
                                        <div class="form-floating">
                                            <input class="form-control" asp-for="TenNguoiDung" type="text" placeholder="Nhập họ tên" />
                                            <label asp-for="TenNguoiDung">Họ và tên</label>
                                            <span asp-validation-for="TenNguoiDung" class="text-danger"></span>
                                        </div>
                                    </div>
                                    <div class="col-12 col-md-6">
                                        <div class="form-floating">
                                            <input class="form-control" asp-for="Email" type="email" placeholder="Nhập email" />
                                            <label asp-for="Email">Email</label>
                                            <span asp-validation-for="Email" class="text-danger"></span>
                                        </div>
                                    </div>
                                </div>
                                <div class="row mb-3">
                                    <div class="col-12 col-md-6 mb-3 mb-md-0">
                                        <div class="form-floating">
                                            <input class="form-control" asp-for="DiaChi" type="text" placeholder="Nhập địa chỉ" />
                                            <label asp-for="DiaChi">Địa chỉ</label>
                                            <span asp-validation-for="DiaChi" class="text-danger"></span>
                                        </div>
                                    </div>
                                    <div class="col-12 col-md-6">
                                        <div class="form-floating">
                                            <input class="form-control" asp-for="SoDienThoai" type="text" placeholder="Nhập số điện thoại" />
                                            <label asp-for="SoDienThoai">Số điện thoại</label>
                                            <span asp-validation-for="SoDienThoai" class="text-danger"></span>
                                        </div>
                                    </div>
                                </div>
                                <div class="row mb-3">
                                    <div class="col-12 col-md-6 mb-3 mb-md-0">
                                        <div class="">
                                            <label class="form-label">Giới tính</label>
                                            <div class="d-flex">
                                                <div class="form-check me-3">
                                                    <input class="form-check-input" type="radio" asp-for="GioiTinh" value="true" id="gioiTinhNam" />
                                                    <label class="form-check-label" for="gioiTinhNam">Nam</label>
                                                </div>
                                                <div class="form-check">
                                                    <input class="form-check-input" type="radio" asp-for="GioiTinh" value="false" id="gioiTinhNu" />
                                                    <label class="form-check-label" for="gioiTinhNu">Nữ</label>
                                                </div>
                                            </div>
                                            <span asp-validation-for="GioiTinh" class="text-danger"></span>
                                        </div>
                                    </div>
                                    <div class="col-12 col-md-6">
                                        <div class="form-floating">
                                            <input class="form-control" asp-for="NgaySinh" type="date" placeholder="Nhập ngày sinh" />
                                            <label asp-for="NgaySinh">Ngày sinh</label>
                                            <span asp-validation-for="NgaySinh" class="text-danger"></span>
                                        </div>
                                    </div>
                                </div>
                                <div class="row mb-3">
                                    <div class="col-12 col-md-6 mb-3 mb-md-0">
                                        <div class="form-floating">
                                            <input class="form-control" asp-for="MatKhau" type="password" placeholder="Nhập mật khẩu" />
                                            <label asp-for="MatKhau">Mật khẩu</label>
                                            <span asp-validation-for="MatKhau" class="text-danger"></span>
                                        </div>
                                    </div>
                                    <div class="col-12 col-md-6">
                                        <div class="form-floating">
                                            <select asp-for="IdLopHoc" asp-items="ViewBag.DanhSachLop" class="form-control">
                                                <option value="">-- Chọn lớp học --</option>
                                            </select>
                                            <span asp-validation-for="IdLopHoc" class="text-danger"></span>
                                        </div>
                                    </div>
                                </div>
                                <div class="mt-4 mb-0">
                                    <div class="d-grid">
                                        <button type="submit" class="btn btn-primary btn-block">Tạo tài khoản</button>
                                    </div>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </main>
</body>