@using DLL.Model
@model List<LopHoc>
@{
    ViewData["Title"] = "Trang Chủ";
    Layout = "_GiaoVienLayout"; 
    var tenDiems = new List<string> { "Giữa Kỳ", "Cuối Kỳ" };
}


<div class="container mt-4">
    <div class="row mb-3">
        <div class="col">
            <h1 class="text-center">QUẢN LÝ LỚP HỌC</h1>
        </div>
    </div>
    <form method="get" asp-controller="BangDiemLop" asp-action="Index">
        <div class="mb-3">
            <label for="tenDiem" class="form-label">Chọn loại điểm:</label>
            <select class="form-select" id="tenDiem" name="tenDiem" required>
                <option value="" disabled selected>-- Chọn loại điểm --</option>
                @foreach (var ten in tenDiems)
                {
                    <option value="@ten">@ten</option>
                }
            </select>
        </div>

        <div class="class-grid">
            @foreach (var lop in Model)
            {
                <button type="submit" name="idLop" value="@lop.Id" class="class-block btn btn-light border">
                    @lop.TenLop
                </button>
            }
        </div>
    </form>
</div>


<!-- Bootstrap CSS -->
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
<!-- Bootstrap JS (để modal hoạt động) -->
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>


<style>
    .class-grid {
        display: grid;
        grid-template-columns: repeat(3, 1fr);
        gap: 15px;
        margin-bottom: 20px;
    }

    .class-block {
        background-color: #fff;
        border: 2px solid #000;
        padding: 20px;
        text-align: center;
        font-size: 18px;
        text-decoration: none;
        color: #000;
        display: block;
        transition: background-color 0.3s;
    }

        .class-block:hover {
            background-color: #e0e0e0;
        }
</style>
