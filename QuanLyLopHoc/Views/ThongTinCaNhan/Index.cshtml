@model DLL.Model.NguoiDung
@{
    ViewData["Title"] = "Thông tin cá nhân";
    Layout = "_GiaoVienLayout";
}

<div class="container-fluid px-4">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="card shadow-lg border-0 rounded-lg mt-4">
                <div class="card-header">
                    <h3 class="text-center font-weight-light my-3">Thông tin cá nhân</h3>
                </div>
                <div class="card-body">
                    <form asp-action="CapNhatThongTin" method="post">
                        <input type="hidden" asp-for="Id" />

                        <div class="row g-3 mb-3">
                            <div class="col-md-6">
                                <div class="form-floating">
                                    <input asp-for="TenNguoiDung" class="form-control" type="text" placeholder="Họ và tên" />
                                    <label asp-for="TenNguoiDung">Họ và tên</label>
                                    <span asp-validation-for="TenNguoiDung" class="text-danger small"></span>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-floating">
                                    <input asp-for="Email" class="form-control" type="email" placeholder="Email" />
                                    <label asp-for="Email">Email</label>
                                    <span asp-validation-for="Email" class="text-danger small"></span>
                                </div>
                            </div>
                        </div>

                        <div class="row g-3 mb-3">
                            <div class="col-md-6">
                                <div class="form-floating">
                                    <input asp-for="DiaChi" class="form-control" type="text" placeholder="Địa chỉ" />
                                    <label asp-for="DiaChi">Địa chỉ</label>
                                    <span asp-validation-for="DiaChi" class="text-danger small"></span>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-floating">
                                    <input asp-for="SoDienThoai" class="form-control" type="text" placeholder="Số điện thoại" />
                                    <label asp-for="SoDienThoai">Số điện thoại</label>
                                    <span asp-validation-for="SoDienThoai" class="text-danger small"></span>
                                </div>
                            </div>
                        </div>

                        <div class="row g-3 mb-3 align-items-center">
                            <div class="col-md-6">
                                <label class="form-label d-block">Giới tính</label>
                                <div class="d-flex gap-4">
                                    <div class="form-check">
                                        <input asp-for="GioiTinh" class="form-check-input" type="radio" value="true" id="gioiTinhNam" />
                                        <label class="form-check-label" for="gioiTinhNam">Nam</label>
                                    </div>
                                    <div class="form-check">
                                        <input asp-for="GioiTinh" class="form-check-input" type="radio" value="false" id="gioiTinhNu" />
                                        <label class="form-check-label" for="gioiTinhNu">Nữ</label>
                                    </div>
                                </div>
                                <span asp-validation-for="GioiTinh" class="text-danger small"></span>
                            </div>
                            <div class="col-md-6">
                                <div class="form-floating">
                                    <input asp-for="NgaySinh" class="form-control" type="date" placeholder="Ngày sinh" />
                                    <label asp-for="NgaySinh">Ngày sinh</label>
                                    <span asp-validation-for="NgaySinh" class="text-danger small"></span>
                                </div>
                            </div>
                        </div>

                        <div class="mt-4 mb-0">
                            <div class="d-grid">
                                <button type="submit" class="btn btn-primary">Cập nhật thông tin</button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
